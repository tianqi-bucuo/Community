<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cky.community.dao.CommentMapper">
    <resultMap id="BaseResultMap" type="com.cky.community.entity.Comment">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="parent_id" jdbcType="INTEGER" property="parentId" />
        <result column="content" jdbcType="VARCHAR" property="content" />
        <result column="comment_type" jdbcType="INTEGER" property="commentType" />
        <result column="user_id" jdbcType="INTEGER" property="userId" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
        <result column="like_count" jdbcType="INTEGER" property="likeCount" />
    </resultMap>

    <sql id="Base_Column_List">
      id, parent_id, content, comment_type, user_id, create_time,update_time,like_count
    </sql>

    <insert id="create" parameterType="com.cky.community.entity.Comment">
        insert into comment (parent_id, content, comment_type, user_id)
        values (#{parentId},#{content},#{commentType},#{userId},)
    </insert>

    <select id="findByArticleId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from comment
        where Article_id = #{articleId}
    </select>

    <select id="findById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from comment
        where id = #{id}
    </select>

</mapper>